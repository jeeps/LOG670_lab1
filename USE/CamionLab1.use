-- Description:
-- Le modèle "Camion" en USE OCL
-- comportant uniquement des classes et des attributs.
--

--

model CamionLab1

-- classes

class Camion
attributes
  ID : Integer
  isLeader : Integer
  convoisId : Integer
end

class Convois 
attributes
  ID : Integer
end

class Central 
end

class Balise 
attributes
  ID : Integer
end

class Route 
attributes
  ID : Integer
end

-- associations

association appartenance between
  Camion[0..1] role appartient;
  Convois[0..*] role detient;
end

association communication between
  Camion [1..*] role communique
  Central [1] role communique
end

